@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">

            <a asp-action="create" class="btn btn-primary mb-3">Create</a>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Desc Title</th>
                        <th scope="col">Desc</th>
                        <th scope="col">Client</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var portfolio in Model)
                    {
                        count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@portfolio.Category.Name</td>
                        <td>@portfolio.Title</td>
                        <td>@portfolio.DescTitle</td>
                        <td>@portfolio.Desc</td>
                        <td>@portfolio.Client</td>
                        <td><a asp-action="edit" asp-route-id="@portfolio.Id" class="btn btn-warning">Edit</a></td>
                        <td><a asp-action="delete" asp-route-id="@portfolio.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>