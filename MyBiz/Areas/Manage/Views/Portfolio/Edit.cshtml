@model Portfolio
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto mt-5">
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Categories</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="new SelectList((List<Category>)ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))"></select>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>

                </div>
                <div class="form-group">
                    <label asp-for="DescTitle" class="form-label">DescTitle</label>
                    <input asp-for="DescTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="DescTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc" class="form-label">Desc</label>
                    <input asp-for="Desc" class="form-control">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client" class="form-label">Client</label>
                    <input asp-for="Client" class="form-control">
                    <span class="text-danger" asp-validation-for="Client"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" class="form-control">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProjectUrl" class="form-label">ProjectUrl</label>
                    <input asp-for="ProjectUrl" class="form-control">
                    <span class="text-danger" asp-validation-for="ProjectUrl"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProjectUrl" class="form-label">ProjectUrl</label>
                    <input asp-for="ProjectUrl" class="form-control">
                    <span class="text-danger" asp-validation-for="ProjectUrl"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFiles" class="form-label">ImageFiles</label>
                    <input asp-for="ImageFiles" class="form-control">
                    <span class="text-danger" asp-validation-for="ImageFiles"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PosterFile" class="form-label">PosterFile</label>
                    <input asp-for="PosterFile" class="form-control">
                    <span class="text-danger" asp-validation-for="PosterFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
