@model List<TeamMember>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">

            <a asp-action="create" class="btn btn-primary mb-3">Create</a>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Position</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@member.Fullname</td>
                            <td>@member.Position.Name</td>
                            <td>@member.Desc</td>
                            <td><img src="~/uploads/team/@member.Image" width="100"/></td>
                            <td><a asp-action="edit" asp-route-id="@member.Id" class="btn btn-warning">Edit</a></td>
                            <td><a asp-action="delete" asp-route-id="@member.Id" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>