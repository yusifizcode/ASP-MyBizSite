@model TeamMember
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto mt-5">
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Fullname" class="form-label">Fullname</label>
                    <input asp-for="Fullname" class="form-control">
                    <span class="text-danger" asp-validation-for="Fullname"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Desc" class="form-label">Desc</label>
                    <input asp-for="Desc" class="form-control">
                    <span class="text-danger" asp-validation-for="Desc"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PositionId">Position</label>
                    <select asp-for="PositionId" class="form-control" asp-items="new SelectList((List<Position>)ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))">
                    </select>
                    <span class="text-danger" asp-validation-for="PositionId"></span>
                </div>

                 <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

