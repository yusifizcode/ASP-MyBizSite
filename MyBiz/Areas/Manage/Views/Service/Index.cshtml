@model List<Service>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">

            <a asp-action="create" class="btn btn-primary mb-3">Create</a>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Desc</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@service.Title</td>
                            <td>@service.Desc</td>
                            <td>@Html.Raw(service.Icon)</td>
                            <td><a asp-action="edit" asp-route-id="@service.Id" class="btn btn-warning">Edit</a></td>
                            <td><a asp-action="delete" asp-route-id="@service.Id" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>