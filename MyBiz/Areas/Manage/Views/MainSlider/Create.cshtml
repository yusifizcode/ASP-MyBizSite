@model MainSlider
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto mt-5">
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Desc" class="form-label">Desc</label>
                    <input asp-for="Desc" class="form-control">
                    <span class="text-danger" asp-validation-for="Desc"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Order" class="form-label">Order</label>
                    <input asp-for="Order" class="form-control">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnText" class="form-label">BtnText</label>
                    <input asp-for="BtnText" class="form-control">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnUrl" class="form-label">BtnUrl</label>
                    <input asp-for="BtnUrl" class="form-control">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
